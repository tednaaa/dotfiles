{
  "vim_mode": true,
  "vim": { "use_system_clipboard": "always", "use_smartcase_find": true },
  "relative_line_numbers": true,
  "vertical_scroll_margin": 10,

  "icon_theme": "Catppuccin Mocha",
  "theme": "Catppuccin Mocha - No Italics",

  "buffer_font_family": "JetBrainsMonoNL Nerd Font Propo",
  "buffer_font_weight": 500,
  "buffer_font_size": 14,
  "buffer_line_height": { "custom": 1.8 },
  "buffer_font_features": { "calt": false },

  "ui_font_family": "JetBrainsMonoNL Nerd Font Propo",
  "ui_font_weight": 500,
  "ui_font_size": 16,

  "terminal": {
    "toolbar": { "breadcrumbs": false },
    "line_height": { "custom": 1.5 },

    "detect_venv": { "on": { "activate_script": "fish" } }
  },

  "cursor_blink": false,
  "hide_mouse": "on_typing",

  "project_panel": { "auto_fold_dirs": false },
  "indent_guides": { "enabled": true },
  "tabs": { "file_icons": true },
  "tab_size": 2,
  "hard_tabs": true,
  "show_whitespaces": "selection",

  "format_on_save": "on",
  "languages": {
    "TypeScript": {
      "code_actions_on_format": { "source.fixAll.eslint": true }
    },
    "TSX": {
      "code_actions_on_format": { "source.fixAll.eslint": true }
    },
    "Vue.js": {
      "code_actions_on_format": { "source.fixAll.eslint": true }
    },
    "Python": {
      "hard_tabs": false,
      "tab_size": 4,
      "formatter": {
        "external": { "command": "black", "arguments": ["-"] }
      }
    }
  },

  "lsp": {
    "rust-analyzer": {
      "initialization_options": { "check": { "command": "clippy" } },
      "binary": { "ignore_system_version": true }
    },
    "pyright": {
      "settings": {
        "python.analysis": {
          "diagnosticMode": "workspace",
          "typeCheckingMode": "off"
        }
      }
    },
    "yaml-language-server": {
      "settings": {
        "yaml": {
          "schemaStore": { "enable": true },
          "completion": true,
          "schemas": { "kubernetes": ["~/projects/k8s/**/*.yaml"] }
        }
      }
    }
  },

  "git": { "inline_blame": { "enabled": false } },

  "features": { "edit_prediction_provider": "zed" },
  "show_edit_predictions": true,

  "auto_install_extensions": {
    "intellij-newui-theme": true,
    "tokyo-night": true,
    "one-dark-pro": true,
    "github-theme": true,

    "catppuccin": true,
    "catppuccin-icons": true,

    "basher": true,
    "cargo-tom": true,
    "docker-compose": true,
    "dockerfile": true,
    "emmet": true,
    "env": true,
    "fish": true,
    "git-firefly": true,
    "html": true,
    "make": true,
    "nginx": true,
    "scss": true,
    "snippets": true,
    "sql": true,
    "toml": true,
    "vue": true,
    "wakatime": true
  }
}
